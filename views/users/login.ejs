  <!-- ******************************************************************************** -->
  <section class="gradient-form mt-2">
    <div class="rounded-1 container">
      <div class="row d-flex justify-content-center">
        <div class="col-xl-10">
          <div class="card rounded-3 text-black border">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body">
                  <div class="text-center">
                    <img src="/Logo.png" style="width: 70px" alt="logo" />
                    <h4 class="mt-1 mb-3 pb-1">Log in to Wanderlust!</h4>
                  </div>

                  <form
                    method="post"
                    action="/login"
                    class="needs-validation"
                    novalidate
                  >
                    <label class="form-label" for="username">Username</label>
                    <div data-mdb-input-init class="form-outline mb-3">
                      <input
                        type="text"
                        id="username"
                        name="username"
                        class="form-control"
                        placeholder="Enter your username"
                        required
                      />
                    </div>

                    <label class="form-label" for="password">Password</label>
                    <div data-mdb-input-init class="form-outline mb-4">
                      <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Enter your password"
                        required
                      />
                    </div>

                    <div class="text-center">
                      <button
                        data-mdb-button-init
                        data-mdb-ripple-init
                        class="btn btn-success btn-block w-100"
                        type="submit"
                      >
                        Log in
                      </button>
                    </div>
                    <div
                      class="w-100 text-center mt-4 mb-4 d-flex justify-content-center"
                    >
                      <a
                        href="/auth/google/callback"
                        class="px-3 border p-2 rounded-pill gAuthAnchor"
                        ><i
                          class="google-logo-gradient fa-brands fa-google text"
                        ></i>
                        <p class="ms-2 d-inline gAuth">Continue with Google</p>
                      </a>
                    </div>
                    <div
                      class="d-flex align-items-center justify-content-center pb-4"
                    >
                      <p class="mb-0 me-2">Don't have an account?</p>
                      <a href="/signup"> Sign up </a>
                    </div>
                  </form>
                </div>
              </div>
              <div class="bg-image-login col-lg-6 d-flex align-items-center">
                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                  <h4 class="mb-4">Discover a World Beyond Travel</h4>
                  <p class="small mb-0">
                    At Wanderlust, we believe that every journey tells a story.
                    Explore unique stays and unforgettable experiences crafted
                    to make your travels truly special. Whether you're seeking a
                    cozy retreat, a vibrant city escape, or an adventure off the
                    beaten path, Wanderlust connects you to destinations that
                    feel like home, anywhere in the world.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
